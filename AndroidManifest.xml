<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mycalendar"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.mycalendar.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.mycalendar.EventEditor"
            android:label="@string/title_activity_event_editor" >
        </activity>
        <activity
            android:name="com.example.mycalendar.EventShow"
            android:label="@string/title_activity_event_show" >
        </activity>
        <activity
            android:name="com.example.mycalendar.CalendarShow"
            android:label="@string/title_activity_calendar_show" >
        </activity>
        <activity
            android:name="com.example.mycalendar.CalendarEditor"
            android:label="@string/title_activity_calendar_editor" >
        </activity>
        <activity
            android:name="com.example.mycalendar.AllEventsList"
            android:label="@string/title_activity_all_event_list" >
        </activity>
        <activity
            android:name="com.example.mycalendar.AllCalendarList"
            android:label="@string/title_activity_all_calendar_list" >
        </activity>
    </application>

</manifest>
