<?xml version="1.0" encoding="UTF-8"?>   
	<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	    android:id="@+id/eventEditorContainer"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:layout_marginTop="10dp"
	    android:clickable="false"
	    android:fillViewport="true" >
	
	    <RelativeLayout
	        android:id="@+id/Editor"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="0dp" >

	        <Spinner
	            android:id="@+id/Calendar"
	            android:layout_width="match_parent"
	            android:layout_height="40dp"
	            android:layout_marginTop="0dp" />

	        <EditText
	            android:id="@+id/EventName"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_below="@id/Calendar"
	            android:layout_marginTop="10dp"
	            android:ems="10"
	            android:hint="@string/text_event_name"
	            android:inputType="textCapSentences" >

	            <requestFocus />
	        </EditText>

	        <Button
	            android:id="@+id/StartDate"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_below="@id/EventName"
	            android:layout_marginLeft="5dp"
	            android:layout_marginTop="20dp"
	            android:layout_toRightOf="@+id/From"
	            android:minWidth="200dp"
	            android:onClick="showStartDatePicker" />

	        <TextView
	            android:id="@+id/From"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignTop="@id/StartDate"
	            android:layout_below="@id/EventName"
	            android:layout_marginTop="10dp"
	            android:text="@string/text_date_from"
	            android:textAppearance="?android:attr/textAppearanceMedium" />

	        <Button
	            android:id="@+id/StartTime"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentRight="true"
	            android:layout_below="@id/EventName"
	            android:layout_marginTop="20dp"
	            android:layout_toRightOf="@id/StartDate"
	            android:minWidth="100dp"
	            android:onClick="showStartTimePicker" />

	        <TextView
	            android:id="@+id/To"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignTop="@+id/EndDate"
	            android:layout_below="@+id/From"
	            android:layout_marginTop="10dp"
	            android:text="@string/text_date_to"
	            android:textAppearance="?android:attr/textAppearanceMedium" />

	        <Button
	            android:id="@+id/EndDate"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignLeft="@id/StartDate"
	            android:layout_below="@id/StartDate"
	            android:layout_marginLeft="0dp"
	            android:layout_toRightOf="@id/To"
	            android:minWidth="200dp"
	            android:onClick="showEndDatePicker" />

	        <Button
	            android:id="@+id/EndTime"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentRight="true"
	            android:layout_below="@id/StartTime"
	            android:layout_marginLeft="0dp"
	            android:layout_marginTop="0dp"
	            android:layout_toRightOf="@id/EndDate"
	            android:minWidth="100dp"
	            android:onClick="showEndTimePicker" />

	        <CheckBox
	            android:id="@+id/allDay"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_below="@id/EndDate"
	            android:layout_marginTop="15dp"
	            android:text="@string/ text_all_day" />

	        <EditText
	            android:id="@+id/notesArea"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_above="@id/Create"
	            android:layout_alignParentBottom="false"
	            android:layout_alignParentLeft="false"
	            android:layout_below="@+id/reminderSpinner"
	            android:layout_marginTop="10dp"
	            android:ems="10"
	            android:gravity="center_vertical|top"
	            android:hint="@string/text_event_notes"
	            android:inputType="textMultiLine"
	            android:lines="1"
	            android:maxLines="5" />

	        <View
	            android:id="@+id/fakeView"
	            android:layout_width="0dp"
	            android:layout_height="0dp"
	            android:layout_centerHorizontal="true"
	            android:layout_centerInParent="false"
	            android:layout_marginLeft="100dp"
	            android:visibility="invisible" />

	        <Spinner
	            android:id="@+id/repeatSpinner"
	            android:layout_width="match_parent"
	            android:layout_height="40dp"
	            android:layout_alignLeft="@id/fakeView"
	            android:layout_alignParentRight="false"
	            android:layout_below="@+id/flexible"
	            android:layout_marginTop="5dp" />

	        <Button
	            android:id="@+id/Create"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_alignParentBottom="true"
	            android:onClick="createEvent"
	            android:text="@string/text_save_button"
	            android:textColorLink="@android:color/holo_orange_light" />

	        <Spinner
	            android:id="@+id/reminderSpinner"
	            android:layout_width="match_parent"
	            android:layout_height="40dp"
	            android:layout_alignRight="@id/fakeView"
	            android:layout_below="@id/flexible"
	            android:layout_centerHorizontal="true"
	            android:layout_marginTop="5dp" />

	        <Spinner
	            android:id="@+id/flexible"
	            android:layout_width="wrap_content"
	            android:layout_height="40dp"
	            android:layout_alignRight="@id/EndDate"
	            android:layout_below="@id/allDay"
	            android:layout_marginLeft="7dp"
	            android:layout_marginRight="0dp"
	            android:layout_toRightOf="@+id/flexibility_text" />

	        <EditText
	            android:id="@+id/flexibility_range"
	            android:layout_width="40dp"
	            android:layout_height="wrap_content"
	            android:layout_alignBottom="@+id/flexible"
	            android:layout_alignParentLeft="false"
	            android:layout_toRightOf="@id/flexible"
	            android:ems="10"
	            android:inputType="number"
	            android:text="1"
	            android:textAlignment="center" />

	        <TextView
	            android:id="@+id/flexibility_text"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentLeft="false"
	            android:layout_alignTop="@id/flexible"
	            android:layout_marginTop="6dp"
	            android:text="@string/text_flexibility"
	            android:textAppearance="?android:attr/textAppearanceMedium" />

	    </RelativeLayout>

	</ScrollView>