<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/calendarItemContainer"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:minHeight="90dp"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/cal_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="false"
        android:layout_alignParentTop="false"
        android:layout_centerHorizontal="false"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/cal_color"
        android:paddingBottom="0dp"
        android:paddingTop="0dp"
        android:tag="cal_name"
        android:text="Calendar Name"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/cal_color"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignBottom="@id/cal_name"
        android:layout_alignParentBottom="false"
        android:layout_alignParentStart="false"
        android:layout_centerHorizontal="false"
        android:layout_centerVertical="false"
        android:layout_marginBottom="7dp"
        android:layout_marginLeft="5dp"
        android:text="TextView" />

</RelativeLayout>
